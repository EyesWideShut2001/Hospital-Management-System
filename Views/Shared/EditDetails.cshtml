@model HospitalManagment.Models.Department

@{
ViewData["Title"] = "Edit Department Details";
}

<h1>Edit Department Details</h1>

<form asp-controller="Department" asp-action="EditDetails" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="Location">Location</label>
        <input type="text" asp-for="Location" class="form-control" />
    </div>

    <div class="form-group">
        <label for="FoundedDate">Founded Date</label>
        <input type="date" asp-for="FoundedDate" class="form-control" />
    </div>

    <div class="form-group">
        <label for="MainDoctor">Main Doctor</label>
        <input type="text" asp-for="MainDoctor" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Description">Description</label>
        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
    </div>

    <div class="form-group">
        <label for="Accreditations">Accreditations</label>
        <textarea asp-for="Accreditations" class="form-control" rows="2"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
