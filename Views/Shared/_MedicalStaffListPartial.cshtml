@model IEnumerable<HospitalManagment.Models.MedicalStaff>

<h2>Medical Staff List</h2>

<!-- Search form -->
<form method="get" action="@Url.Action("MedicalStaffList", "MedicalStaff")">
    <input type="text" name="searchQuery" placeholder="Search by Username" value="@ViewBag.SearchQuery" />
    <button type="submit">Search</button>
</form>

<!-- Table for displaying medical staff -->
<table class="table table-striped">
    <thead>
    <tr>
        <th>#</th>
        <th>Username</th>
        <th>Department</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var medicalStaff in Model)
    {
    <tr>
        <td>@medicalStaff.Id</td>
        <td>@medicalStaff.Username</td>
        <td>@medicalStaff.DepartmentId</td> <!-- Display DepartmentId, you may replace it with the actual Department Name if necessary -->
    </tr>
    }
    </tbody>
</table>
